# ============================================================================
# MySQL Environment Variables
# ============================================================================
# MySQL 8.0 configuration for Aevov
#
# SECURITY WARNING:
#   1. Copy this file to mysql.env before use
#   2. NEVER commit mysql.env to version control
#   3. Generate secure passwords: openssl rand -base64 32
#   4. These defaults are for LOCAL DEVELOPMENT ONLY
#
# Usage: cp mysql.env.example mysql.env
# ============================================================================

# MySQL Root Password
# CHANGE THIS! Generate with: openssl rand -base64 32
MYSQL_ROOT_PASSWORD=<CHANGE_THIS_GENERATE_SECURE_PASSWORD>

# MySQL Database
MYSQL_DATABASE=wordpress

# MySQL User Credentials
# CHANGE THIS! Generate with: openssl rand -base64 32
MYSQL_USER=aevov_user
MYSQL_PASSWORD=<CHANGE_THIS_GENERATE_SECURE_PASSWORD>

# MySQL Port
MYSQL_PORT=3306

# MySQL Configuration
MYSQL_INITDB_SKIP_TZINFO=1

# Character Set
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci
