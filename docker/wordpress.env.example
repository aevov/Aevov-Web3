# ============================================================================
# WordPress Environment Variables
# ============================================================================
# Configuration for the Aevov WordPress environment
#
# SECURITY WARNING:
#   1. Copy this file to wordpress.env before use
#   2. NEVER commit wordpress.env to version control
#   3. Generate secure passwords and keys before deployment
#   4. These defaults are for LOCAL DEVELOPMENT ONLY
#
# Usage: cp wordpress.env.example wordpress.env
# ============================================================================

# WordPress Database Configuration
# Must match values in mysql.env
WORDPRESS_DB_HOST=mysql:3306
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=aevov_user
WORDPRESS_DB_PASSWORD=<MUST_MATCH_MYSQL_ENV_PASSWORD>
WORDPRESS_TABLE_PREFIX=wp_

# WordPress Debug Settings (disable in production!)
WORDPRESS_DEBUG=true
WORDPRESS_DEBUG_LOG=true
WORDPRESS_DEBUG_DISPLAY=true
WORDPRESS_DEBUG_SCRIPT=false

# WordPress URLs
WORDPRESS_URL=http://localhost:8080
WORDPRESS_ADMIN_EMAIL=admin@example.com

# WordPress Admin Credentials
# CHANGE THESE IMMEDIATELY after first login!
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=<CHANGE_THIS_AFTER_SETUP>

# PHP Settings
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M

# Redis Configuration
WP_REDIS_HOST=redis
WP_REDIS_PORT=6379
WP_REDIS_DATABASE=0
WP_REDIS_TIMEOUT=1
WP_REDIS_READ_TIMEOUT=1

# Development Settings
WP_ENV=development
WP_HOME=http://localhost:8080
WP_SITEURL=http://localhost:8080

# ============================================================================
# Security Keys - MUST BE UNIQUE FOR EACH INSTALLATION
# ============================================================================
# Generate new keys at: https://api.wordpress.org/secret-key/1.1/salt/
# NEVER use the placeholder values below in production!

AUTH_KEY='<GENERATE_UNIQUE_KEY>'
SECURE_AUTH_KEY='<GENERATE_UNIQUE_KEY>'
LOGGED_IN_KEY='<GENERATE_UNIQUE_KEY>'
NONCE_KEY='<GENERATE_UNIQUE_KEY>'
AUTH_SALT='<GENERATE_UNIQUE_KEY>'
SECURE_AUTH_SALT='<GENERATE_UNIQUE_KEY>'
LOGGED_IN_SALT='<GENERATE_UNIQUE_KEY>'
NONCE_SALT='<GENERATE_UNIQUE_KEY>'

# Aevov Plugin Settings
AEVOV_DEBUG_MODE=true
AEVOV_LOG_LEVEL=debug
AEVOV_CACHE_ENABLED=true
AEVOV_TEST_MODE=true

# Multisite Settings (if needed)
WP_ALLOW_MULTISITE=true
MULTISITE=false
SUBDOMAIN_INSTALL=false
DOMAIN_CURRENT_SITE=localhost:8080
PATH_CURRENT_SITE=/
SITE_ID_CURRENT_SITE=1
BLOG_ID_CURRENT_SITE=1
