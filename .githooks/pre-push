#!/bin/bash
# ============================================================================
# Pre-Push Hook for Aevov
# ============================================================================
# Runs tests before allowing push to remote
# ============================================================================

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}Running pre-push checks...${NC}\n"

# Track if any checks fail
CHECKS_FAILED=0

# Get current branch
BRANCH=$(git rev-parse --abbrev-ref HEAD)

# ============================================================================
# 1. Check if pushing to protected branches
# ============================================================================
PROTECTED_BRANCHES=("main" "master" "production")

if [[ " ${PROTECTED_BRANCHES[@]} " =~ " ${BRANCH} " ]]; then
    echo -e "${YELLOW}Warning: You are about to push to protected branch: ${BRANCH}${NC}"
    read -p "Are you sure? (y/N) " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        echo -e "${RED}Push cancelled${NC}\n"
        exit 1
    fi
fi

# ============================================================================
# 2. Run critical tests
# ============================================================================
echo -e "${YELLOW}Running critical tests...${NC}"

if [ -f "testing/workflow-test-runner.php" ]; then
    echo -e "${BLUE}Running workflow tests...${NC}"
    php testing/workflow-test-runner.php --quick-test
    if [ $? -ne 0 ]; then
        echo -e "${RED}✗ Workflow tests failed${NC}\n"
        CHECKS_FAILED=1
    else
        echo -e "${GREEN}✓ Workflow tests passed${NC}\n"
    fi
else
    echo -e "${YELLOW}  Warning: Workflow test runner not found${NC}\n"
fi

# ============================================================================
# 3. Run PHPUnit tests
# ============================================================================
if [ -f "phpunit.xml" ] && [ -d "vendor/bin" ]; then
    echo -e "${YELLOW}Running PHPUnit tests...${NC}"
    vendor/bin/phpunit --no-coverage --stop-on-failure
    if [ $? -ne 0 ]; then
        echo -e "${RED}✗ PHPUnit tests failed${NC}\n"
        CHECKS_FAILED=1
    else
        echo -e "${GREEN}✓ PHPUnit tests passed${NC}\n"
    fi
else
    echo -e "${YELLOW}  Skipping PHPUnit tests (not configured)${NC}\n"
fi

# ============================================================================
# 4. Run JavaScript tests
# ============================================================================
if [ -f "package.json" ] && grep -q "\"test\"" package.json; then
    echo -e "${YELLOW}Running JavaScript tests...${NC}"
    npm test -- --passWithNoTests
    if [ $? -ne 0 ]; then
        echo -e "${RED}✗ JavaScript tests failed${NC}\n"
        CHECKS_FAILED=1
    else
        echo -e "${GREEN}✓ JavaScript tests passed${NC}\n"
    fi
else
    echo -e "${YELLOW}  Skipping JavaScript tests (not configured)${NC}\n"
fi

# ============================================================================
# 5. Check for uncommitted changes
# ============================================================================
echo -e "${YELLOW}Checking for uncommitted changes...${NC}"

if ! git diff-index --quiet HEAD --; then
    echo -e "${YELLOW}  Warning: You have uncommitted changes${NC}"
    git status --short
    read -p "Continue push? (y/N) " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        echo -e "${RED}Push cancelled${NC}\n"
        exit 1
    fi
else
    echo -e "${GREEN}✓ No uncommitted changes${NC}\n"
fi

# ============================================================================
# 6. Check for TODO/FIXME comments
# ============================================================================
echo -e "${YELLOW}Checking for TODO/FIXME comments...${NC}"

TODO_COUNT=$(git diff origin/${BRANCH}..HEAD --name-only | xargs grep -E 'TODO|FIXME|XXX|HACK' 2>/dev/null | wc -l || echo "0")

if [ "$TODO_COUNT" -gt 0 ]; then
    echo -e "${YELLOW}  Warning: Found $TODO_COUNT TODO/FIXME comments in changes${NC}"
    echo -e "${YELLOW}  Consider addressing these before pushing${NC}"
else
    echo -e "${GREEN}✓ No TODO/FIXME comments in changes${NC}\n"
fi

# ============================================================================
# Summary
# ============================================================================
if [ $CHECKS_FAILED -eq 1 ]; then
    echo -e "${RED}════════════════════════════════════════${NC}"
    echo -e "${RED}✗ Pre-push checks FAILED${NC}"
    echo -e "${RED}════════════════════════════════════════${NC}"
    echo -e "${YELLOW}Fix the issues above and try again${NC}"
    echo -e "${YELLOW}Or use 'git push --no-verify' to skip checks${NC}\n"
    exit 1
else
    echo -e "${GREEN}════════════════════════════════════════${NC}"
    echo -e "${GREEN}✓ All pre-push checks PASSED${NC}"
    echo -e "${GREEN}════════════════════════════════════════${NC}\n"
    exit 0
fi
