# ============================================================================
# Aevov Production Environment Configuration
# ============================================================================
# Copy this file to .env.production and customize for your environment
# Usage: docker-compose -f docker-compose.production.yml --env-file .env.production up -d
# ============================================================================

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
MYSQL_ROOT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
MYSQL_PORT=3306

# ----------------------------------------------------------------------------
# WordPress Configuration
# ----------------------------------------------------------------------------
WORDPRESS_TABLE_PREFIX=wp_
WORDPRESS_DEBUG=false
WORDPRESS_DEBUG_LOG=true
WORDPRESS_DEBUG_DISPLAY=false
WORDPRESS_PORT=8080
WORDPRESS_SSL_PORT=8443

# ----------------------------------------------------------------------------
# Redis Configuration
# ----------------------------------------------------------------------------
REDIS_PORT=6379

# ----------------------------------------------------------------------------
# phpMyAdmin (disable in production)
# ----------------------------------------------------------------------------
PHPMYADMIN_PORT=8081

# ----------------------------------------------------------------------------
# Application Configuration
# ----------------------------------------------------------------------------
APP_ENV=production
APP_URL=http://localhost:8080

# ----------------------------------------------------------------------------
# Aevov Plugin Configuration
# ----------------------------------------------------------------------------

# Language Engine - OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Image Engine - Stability AI / DALL-E
STABILITY_API_KEY=sk-your-stability-api-key-here
DALLE_API_KEY=sk-your-dalle-api-key-here

# Music Forge - Music Generation Service
MUSIC_API_KEY=your-music-api-key-here

# Transcription Engine - Whisper API
WHISPER_API_KEY=your-whisper-api-key-here

# Cubbit Storage
CUBBIT_ACCESS_KEY=your-cubbit-access-key-here
CUBBIT_SECRET_KEY=your-cubbit-secret-key-here
CUBBIT_BUCKET=aevov-patterns

# Embedding Engine
EMBEDDING_API_KEY=your-embedding-api-key-here
EMBEDDING_MODEL=text-embedding-ada-002

# Memory Core - Vector Database
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX=aevov-memory

# ----------------------------------------------------------------------------
# Security Configuration
# ----------------------------------------------------------------------------
JWT_SECRET=CHANGE_THIS_RANDOM_STRING
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# ----------------------------------------------------------------------------
# Monitoring & Logging
# ----------------------------------------------------------------------------
LOG_LEVEL=warning
SENTRY_DSN=
ENABLE_MONITORING=true

# ----------------------------------------------------------------------------
# Performance Configuration
# ----------------------------------------------------------------------------
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_DRIVER=redis

# ----------------------------------------------------------------------------
# Email Configuration (for notifications)
# ----------------------------------------------------------------------------
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@aevov.local
MAIL_FROM_NAME=Aevov

# ----------------------------------------------------------------------------
# Backup Configuration
# ----------------------------------------------------------------------------
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_DESTINATION=s3

# ----------------------------------------------------------------------------
# Testing Configuration
# ----------------------------------------------------------------------------
RUN_TESTS_ON_STARTUP=false
TEST_REPORT_FORMAT=html
