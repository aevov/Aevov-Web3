{
  "name": "aevov-ecosystem",
  "version": "1.0.0",
  "description": "Advanced AI-powered WordPress plugin ecosystem",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "webpack --mode production",
    "build:css": "sass --style compressed src/scss:assets/css",
    "dev": "npm run dev:js",
    "dev:js": "webpack --mode development --watch",
    "dev:css": "sass --watch src/scss:assets/css",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint '**/*.{js,jsx}' --ignore-path .gitignore",
    "lint:js:fix": "eslint '**/*.{js,jsx}' --ignore-path .gitignore --fix",
    "lint:css": "stylelint '**/*.{css,scss}' --ignore-path .gitignore",
    "lint:css:fix": "stylelint '**/*.{css,scss}' --ignore-path .gitignore --fix",
    "format": "prettier --write '**/*.{js,jsx,json,css,scss,md}'",
    "format:check": "prettier --check '**/*.{js,jsx,json,css,scss,md}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "analyze": "webpack --mode production --analyze",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "ai",
    "machine-learning",
    "react"
  ],
  "author": "Aevov Development Team",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/aevov/aevov.git"
  },
  "bugs": {
    "url": "https://github.com/aevov/aevov/issues"
  },
  "homepage": "https://aevov.dev",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@wordpress/api-fetch": "^6.44.0",
    "@wordpress/components": "^25.13.0",
    "@wordpress/element": "^5.24.0",
    "@wordpress/hooks": "^3.47.0",
    "@wordpress/i18n": "^4.47.0",
    "@wordpress/icons": "^9.38.0",
    "@wordpress/url": "^3.48.0",
    "classnames": "^2.3.2",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.5",
    "@types/lodash": "^4.14.200",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@wordpress/babel-preset-default": "^7.31.0",
    "@wordpress/eslint-plugin": "^17.3.0",
    "@wordpress/prettier-config": "^3.3.0",
    "@wordpress/scripts": "^26.17.0",
    "@wordpress/stylelint-config": "^21.31.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.3",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.0.3",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "eslintConfig": {
    "extends": [
      "plugin:@wordpress/eslint-plugin/recommended",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:jest/recommended",
      "prettier"
    ],
    "plugins": [
      "react",
      "react-hooks",
      "jsx-a11y",
      "jest",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off"
    },
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": "@wordpress/prettier-config",
  "stylelint": {
    "extends": [
      "@wordpress/stylelint-config"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "<rootDir>/tests/__mocks__/styleMock.js",
      "\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/tests/__mocks__/fileMock.js"
    },
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/tests/**",
      "!**/dist/**",
      "!**/build/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.{js,jsx}",
      "**/*.test.{js,jsx}",
      "**/*.spec.{js,jsx}"
    ]
  }
}
